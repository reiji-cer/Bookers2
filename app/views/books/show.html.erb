<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>

      <h4>name</h4>
      <%= @book.user.name %>

      <h4>introduction</h4>
      <%= @book.user.introduction %>

      <%= link_to edit_user_path(@book.user.id) do%>
      <i class="fas fa-user-cog"></i>
      <%end %>

      <h1>New book</h1>

      <%= form_with model: @book_new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit "Create Book" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">

      <h1>Book detail</h1>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th class="colspan = 3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image %></br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
              <td>
                <%= link_to 'Edit',  edit_book_path(@book.id), class: "btn btn-success" %>
                <%=link_to 'Destroy', book_path(@book.id), method: :delete , class: "btn btn-danger"%>
              </td>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
        </div>
      </div>
    </div>
  </div>
</div>