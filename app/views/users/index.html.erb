<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image %>
      <div>
        <span>name<span>
        <%= @user.name %>
      </div>
      <h4>introduction</h4>
      <%= @user.introduction %>

      <%= link_to edit_user_path(@self_user.id) do%>
      <i class="fas fa-user-cog"></i>
      <%end %>

      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %></br>
        <%= f.submit "Create Book", class: "btn btn-success" %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th class="colspan = 3"></th>
          </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                 <%= image_tag user.get_profile_image %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td></td>
              <td>
                <%= link_to 'Show', user_path(user.id) %>
              </td>

            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
      </div>
    </div>
  </div>
</div>