<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image %>
      <div>
        <span>name</span>
        <%= @user.name %>
      </div>
      <h4>introduction</h4>
      <%= @user.introduction %>

      <%= link_to edit_user_path(@user.id) do%>
      <i class="fas fa-user-cog"></i>
      <%end %>

      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        </br>
        <%= f.submit "Create Book", class: "btn btn-success" %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th class="colspan"></th>
          </tr>

          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image %></br>
                  <%= book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                 <%= book.body %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </thead>
      </table>
    </div>
  </div>
</div>